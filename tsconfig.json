{
  "extends": "@bifravst/code-style/tsconfig.json",
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
